@model PersonViewModel
@using TYProject.Core.PersonAggregate;
@using static TYProject.Web.Controllers.PersonController;



@{
    var genderSelectList = new List<SelectListItem>()
    {
        new SelectListItem(Gender.Male.ToString(), string.Format("{0}", Gender.Male)),
        new SelectListItem(Gender.Female.ToString(), string.Format("{0}", Gender.Female)),
        new SelectListItem(Gender.Other.ToString(), string.Format("{0}", Gender.Other)),
    };
}

<script>
    (function onCompanyDetailsLoad(global, $) {


        $(document).ready(function onCompanyDetailsReady() {

            $("#addNewSuccessButton").on("click", function onNewSuccess() {
                var url = '@Url.Action("Success","Person")';

                global.location.href = url ;
            });
        });
    })(window, jQuery);
</script>

<script>
        (function onCompanyDetailsLoad(global, $) {


            $(document).ready(function onCompanyDetailsReady() {

                $("#addNewCancelButton").on("click", function onNewCancel() {
                    var url = '@Url.Action("Index","Company")';

                    global.location.href = url;
                });
            });
        })(window, jQuery);
</script>


@using (Html.BeginForm())
{
       <div class="mt-2">
    <center><h2>Add New Employee</h2></center></div>
       <div class="bg-light">
    <div class="row">
        
        <div class="form-group col-md-6 mt-4">
            <label class="form-label" for="firstname">First Name</label>
            @Html.TextBoxFor(x => x.FirstName, new { @class= "form-control", placeholder="First name"})
        </div>
        
        <div class="form-group col-md-6 mt-4">
            <label class="form-label" for="lastname">Last Name</label>
            @Html.TextBoxFor(x => x.LastName, new { @class= "form-control", placeholder="Last name"})
        </div>

        <div class="form-group col-md-6 mt-2">
            <label class="form-label" for="middleName">Middle Name</label>
            @Html.TextBoxFor(x => x.MiddleName, new { @class= "form-control", placeholder="Middle name"})
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4 mt-2">
            <label class="form-label" for="inputState">Gender</label>
            @Html.DropDownListFor(x => x.Gender, genderSelectList, new { @class="form-control" })
        </div>

        <div class="form-group col-md-4 mt-2">
            <label class="form-label" for="dob">Date of Birth:</label>
            <input class="form-control" type="date" name="dob" id="validationCustom04" placeholder="dd-mm-yyyy" value="" min="1960-01-01" max="2030-12-31" required>
        </div>
    </div>
    
    
    <div class="row col-md-2 mt-4 float-md-start">
        <div class="col"></div>
            <div class="col-auto">
                <button id="addNewSuccessButton" type="submit" title="Add new Employees" class="btn btn-primary"><i class="fa-solid"></i> Submit</button>
            <button id="addNewCancelButton" type="button" class="btn btn-secondary">Cancel</button></div>  
        </div>
        
    <div class="row col-md mt-4 float-md-none">
        <div class="col-auto"><button class="btn btn-danger" type="reset">Reset</button>
        </div></div>
    </div>
    <!-- Hidden fields -->
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Companyid)
}
